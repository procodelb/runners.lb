FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY client/package*.json ./client/

# Install dependencies
RUN npm install
RUN cd client && npm install

# Copy application files
COPY . .

# Expose port
EXPOSE 5173

# Start dev server
WORKDIR /app/client
CMD ["npm", "run", "dev", "--", "--host"]

