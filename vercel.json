{
  "version": 2,
  "builds": [
    { 
      "src": "client/package.json", 
      "use": "@vercel/static-build", 
      "config": { 
        "distDir": "client/dist",
        "installCommand": "cd client && npm install",
        "buildCommand": "cd client && npm run build"
      } 
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "https://soufiam-erp-backend.onrender.com/api/$1" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}


